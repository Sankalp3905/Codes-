class Graph:
    def __init__(self):
        self.V = 0
        self.edges = []  # each edge = [weight, u, v]
        self.dept = []

    # Step 1: Take user input
    def initialize(self):
        self.V = int(input("Enter number of departments: "))
        print("Enter the department names:")
        for i in range(self.V):
            name = input(f"Department {i+1}: ")
            self.dept.append(name)

        print("\nEnter the distance between departments (0 if no direct link):")
        for i in range(self.V):
            for j in range(i + 1, self.V):
                w = int(input(f"Distance between {self.dept[i]} and {self.dept[j]}: "))
                if w != 0:
                    self.edges.append([w, i, j])

    # Step 2: Find parent (for Union-Find)
    def find(self, parent, i):
        if parent[i] == i:
            return i
        return self.find(parent, parent[i])

    # Step 3: Union (for Union-Find)
    def union(self, parent, rank, x, y):
        xroot = self.find(parent, x)
        yroot = self.find(parent, y)

        if rank[xroot] < rank[yroot]:
            parent[xroot] = yroot
        elif rank[xroot] > rank[yroot]:
            parent[yroot] = xroot
        else:
            parent[yroot] = xroot
            rank[xroot] += 1

    # Step 4: Kruskal's Algorithm
    def kruskal(self):
        result = []  # MST result
        i, e = 0, 0

        self.edges = sorted(self.edges, key=lambda item: item[0])

        parent = []
        rank = []

        for node in range(self.V):
            parent.append(node)
            rank.append(0)

        while e < self.V - 1 and i < len(self.edges):
            w, u, v = self.edges[i]
            i += 1
            x = self.find(parent, u)
            y = self.find(parent, v)

            if x != y:
                e += 1
                result.append([u, v, w])
                self.union(parent, rank, x, y)

        print("\nMinimum Spanning Tree using Kruskal's Algorithm:")
        total = 0
        for u, v, weight in result:
            print(f"{self.dept[u]} - {self.dept[v]} : {weight}")
            total += weight
        print(f"Total Minimum Distance: {total}")


# --- Main Program ---
g = Graph()
g.initialize()
g.kruskal()
