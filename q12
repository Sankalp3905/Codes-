class node :
    def __init__(self,data):
        self.data=data
        self.left=None
        self.right=None

class BST:
    def __init__(self):
        self.root=None

    def createbst(self,x):
        newnode=node(x)
        if self.root is None:
            self.root=newnode
            return

        ptr=self.root
        parent=None
        while ptr is not None:
            parent=ptr
            if x>ptr.data:
                ptr=ptr.right
            else :
                ptr=ptr.left

        if x>parent.data :
            parent.right=newnode
        else :
            parent.left=newnode

    def search(self,x):
        if self.root is None:
            print("Tree is Empty")
            return
        
        ptr=self.root
        while ptr is not None :
            if x==ptr.data:
                print(f"{x} is Found in tree")
                return
            elif x>ptr.data:
                ptr=ptr.right
            else :
                ptr=ptr.left 
        print(f"{x} is not found in tree")

    def leafnode(self,ptr):
        if ptr is None:
            return
        if ptr.left is None and ptr.right is None :
            print(ptr.data, end=" ")
            return
        if ptr.left:
            self.leafnode(ptr.left)
        if ptr.right:
            self.leafnode(ptr.right)
    
    def levelwisetraversal(self):
        if self.root is None:
            print("Tree is Empty")
            return
        queue=[self.root]

        while queue:
            current=queue.pop()
            print(current.data,end=" ")

            if current.left:
                queue.append(current.left)
            if current.right:
                queue.append(current.right)

def main():
    t=BST()
    while True:
        print("\n 1. Insert")
        print(" 2. Search")
        print(" 3. Display Leaf Node")
        print(" 4. Level wise Traversal")
        print(" 5. Exit")

        ch=int(input("Enter your choice : "))

        if ch == 1:
            x=int(input("Enter the data to insert: "))
            t.createbst(x)
        
        elif ch ==2:
            x=int(input("Enter the data to insert: "))
            t.search(x)
        
        elif ch== 3:
            print(" Display Leaf Node : ", end=" ")
            t.leafnode(t.root)
        
        elif ch == 4:
            print("Level wise Traversal : ", end=" ")
            t.levelwisetraversal()
        
        elif ch == 5:
            print("Existingg.......")
            break;

        else :
            print("Invalid choice....")


if __name__=="__main__":
    main()

